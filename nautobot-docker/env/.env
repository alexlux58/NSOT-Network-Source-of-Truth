# ---------- Nautobot core ----------
NAUTOBOT_ALLOWED_HOSTS=*
NAUTOBOT_SECRET_KEY=change-me-to-a-long-random-string
NAUTOBOT_SUPERUSER_NAME=alex
NAUTOBOT_SUPERUSER_EMAIL=alex@example.com
NAUTOBOT_INSTANCE_NAME=Alex-Lab-Nautobot
NAUTOBOT_LOG_LEVEL=INFO
NAUTOBOT_GUNICORN_BIND=0.0.0.0:8081

# ---------- Database (Postgres) ----------
POSTGRES_DB=nautobot
POSTGRES_USER=nautobot
POSTGRES_PASSWORD=nautobotpassword
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# ---------- Redis ----------
REDIS_HOST=redis
REDIS_PORT=6379

# ---------- Nautobot DB/Redis wiring (so Compose doesn't need ${...})
NAUTOBOT_DB_NAME=nautobot
NAUTOBOT_DB_USER=nautobot
NAUTOBOT_DB_PASSWORD=nautobotpassword
NAUTOBOT_DB_HOST=postgres
NAUTOBOT_DB_PORT=5432
NAUTOBOT_REDIS_HOST=redis
NAUTOBOT_REDIS_PORT=6379
