# Nautobot Configuration
NAUTOBOT_ALLOWED_HOSTS=*
NAUTOBOT_SECRET_KEY=your-secret-key-here-change-this-in-production-50-chars-minimum-required
NAUTOBOT_GUNICORN_BIND=0.0.0.0:8080

# Database Configuration
POSTGRES_DB=nautobot
POSTGRES_USER=nautobot
POSTGRES_PASSWORD=nautobot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Optional superuser bootstrap (used by start.sh auto-init)
NAUTOBOT_SUPERUSER_NAME=alexlux
NAUTOBOT_SUPERUSER_EMAIL=alexlux@live.com
NAUTOBOT_SUPERUSER_PASSWORD=admin123

# Additional Nautobot settings
DEBUG=False
LOG_LEVEL=INFO
ENABLE_SSO=False
ENABLE_NAPALM=False
ENABLE_GRAPHQL=True
ENABLE_METRICS=False

# Media and Static Files
MEDIA_ROOT=/opt/nautobot/media
STATIC_ROOT=/opt/nautobot/static

# Celery Configuration
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_RESULT_BACKEND=redis://redis:6379/0
CELERY_BROKER_URL=redis://redis:6379/0