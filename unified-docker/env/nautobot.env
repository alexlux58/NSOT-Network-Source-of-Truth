# Nautobot Configuration
NAUTOBOT_ALLOWED_HOSTS=*
NAUTOBOT_SECRET_KEY=your-secret-key-here-change-this-in-production-50-chars-minimum-required
NAUTOBOT_GUNICORN_BIND=0.0.0.0:8080

# Database Configuration (Nautobot-specific format)
NAUTOBOT_DB_ENGINE=django.db.backends.postgresql
NAUTOBOT_DB_NAME=nautobot
NAUTOBOT_DB_USER=nautobot
NAUTOBOT_DB_PASSWORD=nautobot
NAUTOBOT_DB_HOST=postgres
NAUTOBOT_DB_PORT=5432
NAUTOBOT_DB_CONNECTION_OPTIONS={}

# Legacy PostgreSQL environment variables (for docker-compose)
POSTGRES_DB=nautobot
POSTGRES_USER=nautobot
POSTGRES_PASSWORD=nautobot
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# Redis Configuration (Nautobot-specific format)
NAUTOBOT_REDIS_HOST=redis
NAUTOBOT_REDIS_PORT=6379

# Optional superuser bootstrap (used by start.sh auto-init)
NAUTOBOT_SUPERUSER_NAME=alexlux
NAUTOBOT_SUPERUSER_EMAIL=alexlux@live.com
NAUTOBOT_SUPERUSER_PASSWORD=admin123

# Additional Nautobot settings
NAUTOBOT_DEBUG=False
NAUTOBOT_LOG_LEVEL=INFO
NAUTOBOT_ENABLE_SSO=False
NAUTOBOT_ENABLE_NAPALM=False
NAUTOBOT_ENABLE_GRAPHQL=True
NAUTOBOT_ENABLE_METRICS=False

# Media and Static Files
MEDIA_ROOT=/opt/nautobot/media
STATIC_ROOT=/opt/nautobot/static

# Celery Configuration
NAUTOBOT_CELERY_TASK_SERIALIZER=json
NAUTOBOT_CELERY_RESULT_SERIALIZER=json
NAUTOBOT_CELERY_ACCEPT_CONTENT=json
NAUTOBOT_CELERY_RESULT_BACKEND=redis://redis:6379/0
NAUTOBOT_CELERY_BROKER_URL=redis://redis:6379/0